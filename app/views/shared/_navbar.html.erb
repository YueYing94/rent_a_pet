<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="row container-fluid">
    <div class="col-6">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto align-items-center">
        <li class="nav-item active">
          <div class="nav-link-wrapper">
            <i class="fa-solid fa-house"></i>
            <%= link_to "Home", root_path, class: "nav-link" %>
          </div>
        </li>
     <% if user_signed_in? %>
      <li class="nav-item active">
       <div class="nav-link-wrapper">
        <i class="fa-solid fa-user"></i>
        <%= link_to "My page", profile_path, class: "nav-link" %>
       </div>
      </li>
      <li class="nav-item">
       <div class="nav-link-wrapper">
        <i class="fa-solid fa-paw"></i>
        <%= link_to "Add a pet", new_pet_path, class: "nav-link" %>
       </div>
      </li>
      <li class="nav-item">
       <div class="nav-link-wrapper">
        <i class="fa-solid fa-right-from-bracket"></i>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
       </div>
      </li>
          <% else %>
          <li class="nav-item">
            <div class="nav-link-wrapper">
             <i class="fa-solid fa-right-to-bracket"></i>
             <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-6">
      <div class="pets-search-bar">
        <%= form_with url: search_pets_path, method: :get do |form| %>
          <div class="input-group mb-3">
            <%= form.text_field :query, placeholder: "Enter pet specie e.g Dog", class: "form-control" %>
            <%= form.submit "Search", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
