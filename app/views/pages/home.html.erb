<div class="container">
  <div class="pets-search-bar">
    <%= form_with url: search_pets_path, method: :get do |form| %>
      <div class="input-group mb-3">
        <%= form.text_field :query, placeholder: "Enter pet specie e.g Dog", class: "form-control" %>
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
<% if user_signed_in? %>
     <h3>Hi <%= current_user.first_name %></h3>
   <% end %>
